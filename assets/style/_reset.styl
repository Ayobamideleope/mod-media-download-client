::-moz-selection {
  background-color: #f4a236; /* Required when declaring ::selection */
  color: #000;
  text-shadow: none;
}

::selection {
  background-color: #f4a236; /* Required when declaring ::selection */
  color: #000;
  text-shadow: none;
}

.white--transparent-1 {
  background-color: #fff3;
}

.white--transparent-2 {
  background-color: #fffd;
}

.white-transparent {
  background: rgba(255, 255, 255, 0.9) !important;
}

.black-transparent {
  background: rgba(0, 0, 0, 0.5) !important;
}

.flex-shrink-none {
  flex-shrink: 0 !important;
}

.flex-grow-none {
  flex-grow: 0 !important;
}

.rounded {
  border-radius: 50%;
}

.rounded-1 {
  border-radius: $border-radius;
}

.rounded-2 {
  border-radius: $border-radius-2;
}

.rounded, .rounded-1, .rounded-2 {
  overflow: hidden;
}

.h-100 {
  height: 100% !important;
}

.w-100 {
  width: 100% !important;
}

.v-btn {
  letter-spacing: 0.05rem;

  &--large {
    letter-spacing: 0.06rem;
  }

  &--small {
    letter-spacing: 0.03rem;
  }
}

.v-btn {
  text-transform: capitalize !important;
}

.v-snack__wrapper {
  border-radius: 6px;
}

.v-snack__content {
  padding: 8px;
}

.v-snack__content .v-btn:first-of-type {
  margin-left: 18px;
}

.scale-transition,
.fade-transition,
.slide-x-transition,
.slide-x-reverse-transition,
.slide-y-transition,
.slide-y-reverse-transition
  &-move
    position: absolute


p,
button
  color: #dededf;


.app-background::before {
  content: '';
  position: fixed;
  display: block;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: url('~assets/img/background/background-1242x2208.jpg') no-repeat bottom right;
  background-size: cover;
}

@media screen and (min-width: 600px) {
  .app-background::before {
    background-image: url('~assets/img/background/background-2560x1440.jpg');
  }
}

.app-background.app-background-portrait::before {
  background-image: url('~assets/img/background/background-1242x2208.jpg');
}

.app-background.app-background-landscape::before {
  background-image: url('~assets/img/background/background-2560x1440.jpg');
}

.glass {
  position: relative;
  overflow: hidden;
}

.glass > * {
  position: relative;
}

.glass::before {
  height: 100vh;
  width: 100vw;
  display: block;
  position: absolute;
  content: '';
  background: url('~assets/img/background/background-blur-1242x2208.jpg')
    no-repeat bottom right fixed;
  background-size: cover;
}

@media screen and (min-width: 600px) {
  .glass::before {
    background-image: url('~assets/img/background/background-blur-2560x1440.jpg');
  }
}

.app-background-portrait .glass::before {
  background-image: url('~assets/img/background/background-blur-1242x2208.jpg');
}

.app-background-landscape .glass::before {
  background-image: url('~assets/img/background/background-blur-2560x1440.jpg');
}
